# EazyHealth AI - Production Environment Variables
# Copy these to your deployment platform (Render, Railway, etc.)

# App Settings
APP_NAME="EazyHealth AI"
APP_VERSION="0.1.0"
DEBUG=false

# Database - Use PostgreSQL for production
# Get this from your hosting provider (Render auto-generates it)
DATABASE_URL="postgresql://user:password@host:5432/database"
# Or for SQLite (not recommended for production):
# DATABASE_URL="sqlite:///./eazyhealth.db"

# LLM Provider
LLM_PROVIDER="openai"
LLM_MODEL="gpt-4"
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# API Keys - KEEP THESE SECRET!
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"

# Search Provider
SEARCH_PROVIDER="brave"
BRAVE_API_KEY="your-brave-api-key-here"
SERPER_API_KEY="your-serper-api-key-here"

# Trusted health information sources
TRUSTED_DOMAINS="cdc.gov,nih.gov,who.int,mayoclinic.org,hopkinsmedicine.org,health.harvard.edu,webmd.com,medlineplus.gov"

# CORS - Set to your frontend domain
CORS_ORIGINS="https://your-app.vercel.app"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
